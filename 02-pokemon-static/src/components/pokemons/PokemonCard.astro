---
interface Props {
    url: string;
    name: string;
    isBig?: boolean
}

const { url, name, isBig = false } = Astro.props;
const id = url.split('/').at(-2);
const imgScr = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---
<!-- href={`/pokemons/${name}`} -->
<a
    href={`/pokemon/${id}`}
    class:list = {[
         `rounded flex flex-col justify-center items-center bg-slate-700 p-4`,
         {
            border: !isBig,
         },
    ]}
>   
    <img
    transition:name={`${name}-image`} 
    class:list={[
        {
            'w-26 h-26': isBig,
            'w-22 h-22': !isBig,
        },
    ]}
    src={imgScr}
    alt={name} 
    />
    <span 
        class:list={[
            `capitalize`,
            {
                'text-4xl text-blue-300': isBig,
            },
        ]}> #{id} {name}</span>
    
</a>